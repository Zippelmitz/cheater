#!/usr/bin/env perl

use 5.010001;
use strict;
use warnings;

use lib 'lib';
use Smart::Comments '####';
use Getopt::Std;
use Cheater;

#$::RD_HINT = 1;
#$::RD_TRACE = 1;

srand(0);

our $OutDir = './tables';

my %opts;
getopts('o:', \%opts) or
    die "Usage: $0 [-o <outfile>] <infile>\n";

my $infile = shift or
    die "No input file specified.\n";

if (! -d $OutDir) {
    mkdir $OutDir or
        die "Failed to create directory \"$OutDir\": $!\n";
}

chdir $OutDir;

